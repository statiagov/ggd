.filters#filters
  .caption= t :inspection_states
  - Setting.inspection_states.each do |key|
    .check_box{:style => "border-bottom: 1px silver dotted;"}
      %div{:style => "float:right;"}
        = @inspection_status_total[key]
      = inspection_status_checkbox(key, @inspection_status_total[key])
      = label_tag(key, t(key))

  .check_box
    %div{:style => "float:right;"}
      %b= @inspection_status_total[:all]
    %b #{t :total_inspections}
  = hook(:index_campaign_sidebar_bottom, self)
